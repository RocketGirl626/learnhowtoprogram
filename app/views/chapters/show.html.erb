<h1><%= @chapter.name %></h1>

<% if @chapter.sections.any? %>
<h4>Here are the sections for this chapter:</h4>

<ul>
  <% @chapter.sections.each do |section| %>
  <li>
    <%= section.name %> |
    <%= link_to "Edit", edit_chapter_section_path(@chapter, section) %> |
    <%= link_to "Delete", chapter_section_path(@chapter, section),
                            :data => {:confirm => "Are you sure?",
                                        :method => "delete"} %>
    </li>
    <% end %>
  </ul>
  <% else %>
  <p>There are no sections yet!</p>
  <% end %>

<p><%= link_to "Add a section", new_chapter_section_path(@chapter) %></p>
<p><%= link_to 'Return to Chapters', chapters_path %></p>
